<script type="text/javascript">
  function saveContent(){
    $.ajax({
      url:'save',
      type: 'POST',
      cache: false,
      data: {
        title: $('#title').val(),
        author: $('#author').val(),
        desc: $('#desc').val(),
        content: ue.getContent()
      },
      success:function(ret){
        getPage('/static/' + ret);
      },
      error: function(req, status, err) {
            alert(req.responseText);
          }
    });
  }

    function getPage(url) {
        $.ajax({
            url: url,
            type: 'get',
            success: function(data) {
                alert('提交成功，点击确定跳转到生成的文章');
                location.href = url;
            },
            error: function(data){
                getPage(url);
            }
        });
    }
