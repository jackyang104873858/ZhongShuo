<!doctype html> 
<html> 
<head> 
<meta charset="utf-8"> 
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"> 
<title><%= commentObj.title %></title> 
<style> 
	* {
		margin: 0;
		padding: 0;
	}
	ul, menu, dir {
	    display: block;
	    list-style-type: disc;
	    -webkit-margin-before: 1em;
	    -webkit-margin-after: 1em;
	    -webkit-margin-start: 0px;
	    -webkit-margin-end: 0px;
	    -webkit-padding-start: 40px;
	}
	li {
    	display: list-item;
    	text-align: -webkit-match-parent;
	}
	img {
	    height: auto!important;
	}
	.rich_media {
		position: relative;
		width: 740px;
		margin-left: auto;
		margin-right: auto;
	}
	.rich_media_inner {
		position: relative;
		padding-bottom: 100px;
	}
	.rich_media_area_extra {
		margin-top: 10px;
		padding: 0 15px 0;
		font-size: 16px;
		word-wrap: break-word;
		font-family: "Helvetica Neue",Helvetica,"Hiragino Sans GB","Microsoft YaHei",Arial,sans-serif;
	}
	.rich_media_extra {
		position: relative;
	}
	.rich_tips {
		margin-bottom: 0;
		min-height: 24px;
	}
	.rich_tips.discuss_title_line { 
		text-align: center;
		margin-top: 0;
		padding: 20px 0 .5em;
		line-height: 1.6;
	}
	.tips {
		position: static;
		padding: 0;
		color: #3e3e3e;
		top: -11px;
		vertical-align: middle;
		font-size: 16px;
		display: inline-block;
	}
	.discuss_list {
		margin-top: -5px;
		padding-bottom: 20px;
		font-size: 16px;

	}
	.discuss_item {
		position: relative;
		padding-left: 45px;
		margin-top: 26px;
	}
	.discuss_item:after {
	    content: "\200B";
	    display: block;
	    height: 0;
	    clear: both;
	}
	.discuss_opr {
		float: right;
	}
	.meta_praise {
	    display: inline-block;
	    text-align: right;
	    padding-top: 5px;
	    margin-top: -5px;
	    -webkit-tap-highlight-color: rgba(0,0,0,0);
    	outline: 0;
    	min-width: 3.5em;
	}
	.tips_global {
    	color: #8c8c8c;
	}
	.media_tool_meta i {
	    vertical-align: 0;
	    position: relative;
	    top: 1px;
	    margin-right: 3px;
	}
	.icon_praise_gray {
	    background: transparent url(data:image/png;base64,) no-repeat 0 0;
	    width: 13px;
	    height: 13px;
	    vertical-align: middle;
	    display: inline-block;
	    -webkit-background-size: 100% auto;
	    background-size: 100% auto;
	}
	.praise_num {
	    display: inline-block;
	    vertical-align: top;
	}
	.user_info {
	    min-height: 20px;
	    overflow: hidden;
	}
	.nickname {
	    display: block;
	    font-weight: 400;
	    font-style: normal;
	    color: #727272;
	    width: 9em;
	    overflow: hidden;
	    text-overflow: ellipsis;
	    white-space: nowrap;
	    word-wrap: normal;
	}
	.avatar {
	    position: absolute;
	    top: 0;
	    left: 0;
	    top: 3px;
	    width: 35px;
	    height: 35px;
	    background-color: #ccc;
	    vertical-align: top;
	    margin-top: 0;
	    border-radius: 2px;
	    -moz-border-radius: 2px;
	    -webkit-border-radius: 2px;
	}
	.discuss_message {
	    word-wrap: break-word;
	    -webkit-hyphens: auto;
	    -ms-hyphens: auto;
	    hyphens: auto;
	    overflow: hidden;
	    color: #3e3e3e;
	    line-height: 1.5;
	}
	.discuss_status {
	    color: #ff7a21;
	    white-space: nowrap;
	}
	.discuss_extra_info {
	    color: #8c8c8c;
	    font-size: 12px;
	}
</style> 
</head> 
<body> 
	<div class="rich_media">
		<div class="rich_media_inner">
				<div class="rich_media_area_extra">
				<div class="rich_media_extra">
					<div class="discuss_container" style="display:block;">
						<div class="rich_tips with_line title_tips discuss_title_line">
							<span class="tips"><%= commentObj.displayType == '自动显示' ? '精彩留言' : '筛选留言' %></span>
						</div>
						<ul class="discuss_list" id="commentList">
							<li class="discuss_item">
								<div class="discuss_opr">
									<span class="media_tool_meta tips_global meta_praise js_comment_praise">
										<i class="icon_praise_gray"></i>
										<span class="praise_num">7699</span>
									</span>
								</div>
								<div class="user_info">
									<strong class="nick_name">张羽</strong>
									<img src="http://wx.qlogo.cn/mmopen/vi_24/hqDXUD6csU89W4Sugvrmx39tmgDEbAlXgy3MZemEMCQKdfB9DOZaaJRGvM1ymDxickhFNib0Mrb7E/96" class="avatar" />
								</div>
								<div class="discuss_message">
									<span class="discuss_status"></span>
									<div class="discuss_message_content">现在的戏子真有钱</div>
								</div>
								<p class="discuss_extra_info">
									昨天
								</p>
							</li>
							<li class="discuss_item">
								<div class="discuss_opr">
									<span class="media_tool_meta tips_global meta_praise js_comment_praise">
										<i class="icon_praise_gray"></i>
										<span class="praise_num">7699</span>
									</span>
								</div>
								<div class="user_info">
									<strong class="nick_name">张羽</strong>
									<img src="http://wx.qlogo.cn/mmopen/vi_24/hqDXUD6csU89W4Sugvrmx39tmgDEbAlXgy3MZemEMCQKdfB9DOZaaJRGvM1ymDxickhFNib0Mrb7E/96" class="avatar" />
								</div>
								<div class="discuss_message">
									<span class="discuss_status"></span>
									<div class="discuss_message_content">现在的戏子真有钱</div>
								</div>
								<p class="discuss_extra_info">
									昨天
								</p>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</body> 
<script src="../js/jquery.min.js"></script>
<script type="text/javascript">
var currentPage = 0;
function getComments() {
	$.ajax({
		url: 'getComments',
		data: 'commentObjId=<%= commentObj.id %>&currentPage=' + currentPage,
		cache: false,
		success: function(ret) {
			$('#commentList').html('');
			if(ret && ret.length > 0) {
				$(ret).each(function(i, comment) {
					$('<li class="discuss_item"><div class="discuss_opr"><span class="media_tool_meta tips_global meta_praise js_comment_praise"><i class="icon_praise_gray"></i><span class="praise_num">' + comment.praiseNum + '</span></span></div><div class="user_info"><strong class="nick_name">' + comment.user + '</strong><img src="' + comment.avatar + '" /></div><div class="discuss_message"><span class="discuss_status"></span><div class="discuss_message_content">' + comment.content + '</div></div><p class="discuss_extra_info">' + comment.createdAt + '</p></li>').appendTo('#commentList');
				});
			}
			else {
				$('<li class="dicuss_item"><div class="discuss_message_content">还没有任何留言哦～<a href="writeComment?commentObjId=<%= commentObj.id %>">马上去发表留言！</a></div></li>').appendTo('#commentList');
			}
		},
		error: function(req, status, err) {
            alert(req.responseText);
        }
	});
}
$(function(){
	currentPage = 0;
	getComments();
});
</script>
</html>