<style>
	.truncate {
		word-wrap: break-word;
	}
</style>
<div class="xs">
	<h3><%= commentObj.title %></h3>
	<div class="col-md-4 email-list1">
		<ul class="collection">
			<li class="collection-item avatar email-unread">
              <i class="fa fa-users icon_1"></i>
              <div class="avatar_left">
              	<span class="email-title">评论显示类型</span>
                <p class="truncate grey-text ultra-small"><%= commentObj.displayType %></p>
              </div>
              <div class="clearfix"> </div>
            </li>
			<li class="collection-item avatar email-unread">
	          <i class="fa fa-exclamation-circle icon_2"></i>
	          <div class="avatar_left">
	          	<span class="email-title">评论地址（粘贴到”阅读原文“里的链接）</span>
	            <p class="truncate grey-text ultra-small">http://www.zhshuo.com/Comment/index?commentObjId=<%= commentObj.id %></p>
	          </div>
	          <div class="clearfix"> </div>
	        </li>
	        <li class="collection-item avatar email-unread">
	          <i class="fa fa-tag icon_3"></i>
	          <div class="avatar_left">
	          	<span class="email-title">截图地址（粘贴到微信文章末尾的图片地址）</span>
	            <p class="truncate grey-text ultra-small">http://www.zhshuo.com/Comment/static/Comment/<%= commentObj.id %>.png</p>
	          </div>
	          <div class="clearfix"> </div>
	        </li>
		</ul>
	</div>
	<div class="col-md-8 inbox_right">
		<form action="#" method="GET">
			<div class="input-group">
                <input type="text" name="search" class="form-control1 input-search" placeholder="输入关键字搜索...">
                <span class="input-group-btn">
                    <button class="btn btn-success" type="button"><i class="fa fa-search"></i></button>
                </span>
            </div><!-- Input Group -->
		</form>
		<div class="mailbox-content">
           <div class="mail-toolbar clearfix">
		     <div class="float-left">
		        <div class="btn btn_1 btn-default mrg5R" onclick="getComments();">
		           <i class="fa fa-refresh"> </i>
		        </div>
		        <div class="dropdown">
		            <a href="#" title="" class="btn btn-default" data-toggle="dropdown" aria-expanded="false">
		                <i class="fa fa-cog icon_8"></i>
		                <i class="fa fa-chevron-down icon_8"></i>
		            <div class="ripple-wrapper"></div></a>
		            <ul class="dropdown-menu float-right">
		                <li>
		                    <a href="#" title="">
		                        <i class="fa fa-pencil-square-o icon_9"></i>
		                        修改
		                    </a>
		                </li>
		                <li class="divider"></li>
		                <li>
		                    <a href="javascript:delCommentObjs();" class="font-red" title="">
		                        <i class="fa fa-times" icon_9=""></i>
		                        删除
		                    </a>
		                </li>
		            </ul>
		        </div>
		        <div class="clearfix"> </div>
		    </div>
		    <div class="float-right">
		        
		              
                        <span class="text-muted m-r-sm">当前显示第1/10页，共96条数据 </span>
                        <div class="btn-group m-r-sm mail-hidden-options" style="display: inline-block;">
                            <div class="btn-group">
                                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-folder"></i> <span class="caret"></span></a>
                                <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                    <li><a href="#">微信公众号文章</a></li>
                                    <li><a href="#">众说文章</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="btn-group">
                            <a class="btn btn-default"><i class="fa fa-angle-left"></i></a>
                            <a class="btn btn-default"><i class="fa fa-angle-right"></i></a>
                        </div>		        
		    </div>
       	</div>
        <table class="table">
	        <tbody id="commentList">
	            
	        </tbody>
        </table>
	</div>
</div>
<div class="clearfix"> </div>